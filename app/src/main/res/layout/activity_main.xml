<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pronew"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="333dp"
        android:layout_height="76dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="144dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="ServiZilla"
        android:textColor="#272525"
        android:textSize="60sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/idBtnGetOtp"
        android:layout_width="258dp"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="96dp"
        android:width="244.12dp"
        android:height="47.7dp"
        android:background="@drawable/textbox"
        android:backgroundTint="#673AB7"
        android:elevation="20dp"
        android:fontFamily="sans-serif-medium"
        android:text="service provider"

        android:textColor="#fff"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/idBtnVerify"
        android:layout_width="258dp"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="80dp"
        android:width="244.12dp"
        android:height="47.7dp"
        android:elevation="20dp"
        android:text="service taker"
        android:background="@drawable/textbox"
        android:textColor="#fff"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="@+id/idBtnGetOtp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/idBtnGetOtp"
        app:layout_constraintTop_toBottomOf="@+id/idBtnGetOtp" />


    <TextView
        android:id="@+id/textView27"
        android:layout_width="39dp"
        android:layout_height="37dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.956"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.066" />


</androidx.constraintlayout.widget.ConstraintLayout>